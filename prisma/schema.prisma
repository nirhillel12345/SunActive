generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  username     String @unique
  email        String @unique
  passwordHash String
  role         Role   @default(USER)

  // Agent -> Players (self relation)
  agentId String?
  agent   User?   @relation("AgentPlayers", fields: [agentId], references: [id])
  players User[]  @relation("AgentPlayers")

  balancePoints Int      @default(0)
  createdAt     DateTime @default(now())

  // Ledger relations (actor / target)
  actedLedgers  Ledger[] @relation("LedgerActor")
  targetLedgers Ledger[] @relation("LedgerTarget")

  // AdminMint relations
  adminMints AdminMint[] @relation("AdminMints") // as admin (issuer)
  userMints  AdminMint[] @relation("UserMints") // as user (recipient)

  bets Bet[]
}

model Ledger {
  id String @id @default(cuid())

  actor   User   @relation("LedgerActor", fields: [actorId], references: [id])
  actorId String

  targetUser   User   @relation("LedgerTarget", fields: [targetUserId], references: [id])
  targetUserId String

  type        LedgerType
  deltaPoints Int
  referenceId String?
  createdAt   DateTime   @default(now())

  @@index([actorId])
  @@index([targetUserId])
}

enum Role {
  ADMIN
  AGENT
  USER
}

enum LedgerType {
  ADMIN_MINT_TO_AGENT
  ADMIN_MINT_TO_USER
  AGENT_MINT_TO_USER
  AGENT_DEDUCT_FROM_USER
  BET_PLACE
  BET_WIN
  BET_LOSS
}

model Market {
  id              String    @id
  question        String
  description     String?
  category        String?
  closeTime       DateTime?
  resolved        Boolean   @default(false)
  resolvedOutcome Outcome?
  tokenYesId      String?
  tokenNoId       String?
  liquidity       Float?
  volume          Float?
  updatedAt       DateTime  @updatedAt
  createdAt       DateTime  @default(now())
  imageUrl        String?

  bets Bet[]
}

enum Outcome {
  YES
  NO
}

model AdminMint {
  id String @id @default(cuid())

  adminId String
  userId  String

  amount    Int
  note      String?
  createdAt DateTime @default(now())

  admin User @relation("AdminMints", fields: [adminId], references: [id])
  user  User @relation("UserMints", fields: [userId], references: [id])

  @@index([adminId])
  @@index([userId])
}

model Bet {
  id              String    @id @default(cuid())
  userId          String
  marketId        String
  outcome         Outcome
  amountStaked    Int
  priceLocked     Float
  shares          Float
  potentialPayout Float
  status          BetStatus @default(OPEN)
  createdAt       DateTime  @default(now())

  user   User   @relation(fields: [userId], references: [id])
  market Market @relation(fields: [marketId], references: [id])

  @@index([userId])
  @@index([marketId])
}

enum BetStatus {
  OPEN
  WON
  LOST
}
